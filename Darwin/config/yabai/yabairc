yabai -m rule --add app="IntelliJ IDEA" title="^(Settings|Rename.*|.*Scope|New.*|Create.*|Move|.*Delete|Reformat.*|Tag|Reset Head|.*[Ss]tash.*|Git Remotes|Change.*|Extract.*|Pull.*|Push.*|.*Update.*|.*Installation|.*Configuration.*|.*Gradle.*|Choose Process|Invalidate Caches|Implement Members|About IntelliJ IDEA|.*Git.*|Welcome to IntelliJ IDEA)" manage=off
yabai -m rule --add app="Mail" title!="^.*— Google –.*$" manage=off

