Config { font = "xft:xos4 Terminess Powerline:style=Bold"
         additionalFonts = [ "xft:Hiragino Kaku Gothic ProN W3:antialias=true"
                           ]
       , bgColor = "black"
	   , fgColor = "grey"
	   , position = TopSize L 95 20
	   , overrideRedirect = False
	   , commands = [ Run Weather "RJTT" [ "-t", "<station>: <tempC>C"
										 , "-L", "64"
										 , "-H", "77"
										 , "--normal" ,"green"
										 , "--high" ,"red"
										 , "--low" ,"lightblue"
										 ] 36000

	   				, Run Cpu            [ "-L", "3"
							             , "-H", "50"
							             , "--normal", "green"
							             , "--high", "red"
							             ] 10

					, Run Memory         [ "-t" ,"Mem: <usedratio>%"
								         ] 10

					, Run Battery        [ "-t", "<left>%"
					 			         , "-L", "20"
								         , "-H", "70"
								         , "-h", "green"
								         , "-n", "yellow"
								         , "-l", "red"
								         ] 10

					, Run Network "enp0s3" [ "-t", "enp0s3: <rx> / <tx>"
										   , "-L", "40"
										   , "-H", "200"
										   , "-m", "3"
										   , "-n", "green"
										   , "-h", "red"
										   ] 10

					, Run Com "/usr/bin/ibus" ["engine"
                                              ] "MyIME" 10

					, Run Date "%a %b %_d %l:%M" "date" 10

					, Run StdinReader
				    ]
	   , sepChar = "%"
	   , alignSep = "}{"
	   , template = "<fn=1>%StdinReader%</fn> }{ %cpu% | %memory% | %battery% | %enp0s3% | <fc=#ee9a00>%date%</fc>  | %MyIME% | %RJTT% |"
	   }
