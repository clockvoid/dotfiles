Config
    { font = "Terminus bold 10"
    , bgColor = "black"
    , fgColor = "grey"
    , position = TopSize L 92 22
    , allDesktops = True
    , persistent = False
    , commands = [
        Run StdinReader

        , Run Cpu
            [ "-L", "20"
            , "-H", "70"
            , "--normal", "green"
            , "--high", "red"
            ] 10

        , Run Memory
            [ "-t", "Mem: <usedratio>%"
            ] 10

        , Run Battery
            [ "-t", "Bat: <acstatus>"
            , "-L", "20"
            , "-H", "40"
            , "-h", "green"
            , "-n", "yellow"
            , "-l", "red"
            , "--"
            , "-o", "<left>% (<timeleft>)"
            , "-O", "AC <left>%"
            , "-i", "FULL"
            ] 10

        , Run Date "%a %b %_d %l:%M" "date" 10

        , Run Weather "RJTT"
            [ "-t", "<tempC>C"
            , "-L", "10"
            , "-H", "30"
            , "--normal" ,"green"
            , "--high" ,"red"
            , "--low" ,"lightblue"
            ] 36000
    ]
    , sepChar = "%"
    , alignSep = "}{"
    , template = "%StdinReader% }{ | %cpu% | %memory% | %battery% | %date% | %RJTT% |"
}
