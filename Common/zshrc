source $HOME/.config/zsh/env.zsh

# If not running interactively, don't do anything
[[ $- != *i* ]] && return

for file in $HOME/.config/zsh/init/*.zsh; do
    source "$file"
done
for file in $HOME/.config/zsh/init/env/*.zsh; do
    source "$file"
done

# If not in the tmux session, don't load plugins
[[ $TMUX == "" ]] && return

# Set the zsh root directoy
export ZSH_ROOT=$HOME/.zsh
# Load plugins and its settings
source $HOME/.config/zsh/zinit.zsh
for file in $HOME/.config/zsh/plugins/*.zsh; do
    source "$file"
done

# editor to use in tmux
export VISUAL="nvim"
export EDITOR="nvim"
